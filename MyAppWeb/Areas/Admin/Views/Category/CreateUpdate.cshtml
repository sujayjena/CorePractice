@model MyApp.Models.ViewModel.CategoryVM
@{
    ViewData["Title"] = "Create";
}

<h1>@((Model.Category == null || Model.Category.Id==0)?"Update":"Create") Category</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="border-1 mt-4">
        <div class="row mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
        </div>
        <div class="row mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
        </div>
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
    <a asp-action="Index" asp-controller="Category">Back To Category</a>
</form>