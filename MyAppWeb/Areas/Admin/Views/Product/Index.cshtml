@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Categories</h1>

<div class="row">
    <a asp-action="CreateUpdate" asp-controller="Category">Create  Category</a>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
        <th>
            Category name
        </th>
        <th>
            Display Order
        </th>
        <th>
            Edit
        </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@item.Id"  >Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
